<p id="notice"><%= notice %></p>

<%= link_to 'Booking Now', new_booking_path(room_id: @room.id), class: 'btn btn-primary' %>

<p>
  <strong>Price:</strong>
  <%= number_to_currency (@room.price) %>
</p>

<p>
<strong>Image:</strong>
<% @room.room_image.each do |image| %>
  <img src="<%= image.url %>">
<% end %>
<%#= image_tag @room.room_image.url if @room.room_image? %>
</p>



<p>
  <strong>Description:</strong>
  <%= @room.description %>
</p>

<p>
  <strong>Title:</strong>
  <%= @room.title %>
</p>

<p>
  <strong>User:</strong>
  <%= @room.user.email %>
</p>

<p>
  <strong>Capacity:</strong>
  <%= yes_no @room.capacity %>
</p>

<p>
  <strong>Pets:</strong>
  <%= yes_no @room.pets %>
</p>

<p>
  <strong>Smoking:</strong>
  <%= yes_no @room.smoking %>
</p>

<p>
  <strong>Wifi:</strong>
  <%= yes_no @room.wifi %>
</p>

<p>
  <strong>Bathrooms:</strong>
  <%= yes_no @room.bathrooms %>
</p>

<p>
  <strong>Bath:</strong>
  <%= yes_no @room.bath %>
</p>

<p>
  <strong>Share:</strong>
  <%= yes_no @room.share %>
</p>

<p>
  <strong>Parties:</strong>
  <%= yes_no @room.parties %>
</p>

