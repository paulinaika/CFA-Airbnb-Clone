<%= form_for(room) do |f| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "field">
    <%= f.file_field :room_image %> <br>
    <%#= f.file_field :room_image, multiple: true %>
    <%= f.hidden_field :room_image_cache %>
    </div>

  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
    <p>* price is per night in dollars</p>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :capacity %><br>
    <%= f.number_field :capacity %>
  </div>

  <div class="field">
    <%= f.label :pets %><br>
    <%= f.check_box :pets %>
  </div>

  <div class="field">
    <%= f.label :smoking %><br>
    <%= f.check_box :smoking %>
  </div>

  <div class="field">
    <%= f.label :wifi %><br>
    <%= f.check_box :wifi %>
  </div>

  <div class="field">
    <%= f.label :bathrooms %><br>
    <%= f.check_box :bathrooms %>
  </div>

  <div class="field">
    <%= f.label :bath %><br>
    <%= f.check_box :bath %>
  </div>

  <div class="field">
    <%= f.label :share %><br>
    <%= f.check_box :share %>
  </div>

  <div class="field">
    <%= f.label :parties %><br>
    <%= f.check_box :parties %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
