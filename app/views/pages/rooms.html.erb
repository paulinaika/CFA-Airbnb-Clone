<h1>Rooms</h1>

<table class= "table table-striped">
  <thead>
    <tr>
      <th>Price</th>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>User</th>
      <th>Capacity</th>
      <th>Pets</th>
      <th>Smoking</th>
      <th>Wifi</th>
      <th>Bathrooms</th>
      <th>Bath</th>
      <th>Share</th>
      <th>Parties</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% current_user.rooms.each do |room| %>
      <tr>
        <td><%= number_to_currency (room.price) %></td>
        <td><%= room.title %></td>
        <td><%= room.description %></td>
        <td><%= image_tag room.room_image, size: "50"%></td>
        <td><%= room.user.email %></td>
        <td><%= yes_no room.capacity %></td>
        <td><%= yes_no room.pets %></td>
        <td><%= yes_no room.smoking %></td>
        <td><%= yes_no room.wifi %></td>
        <td><%= yes_no room.bathrooms %></td>
        <td><%= yes_no room.bath %></td>
        <td><%= yes_no room.share %></td>
        <td><%= yes_no room.parties %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
